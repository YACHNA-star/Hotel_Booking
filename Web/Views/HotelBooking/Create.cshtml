@model HotelBooking
<!DOCTYPE html>
<html lang="en">
<style>
    body {
        background-color:mediumpurple;
    }

    .btn-primary {
        color: black;
        background-color: mediumpurple;
        border-color: mediumpurple;
    }
</style>
<body>
<h1>Reservation</h1>
<hr />
<div class="row">
    <div class=" col-6">
        <div class="card">
           
            <div class="card-header">
                <h5>Reserve a hotel room</h5>
            </div>
            <div class="card-body">
                    <form asp-controller="HotelBooking" asp-action="CreateDetail" method="post">
                    <div class="mb-3">
                        <label class="form-label">Guest Name</label>
                        <input asp-for=Name type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label"> How many guest are you bringing?</label>
                        <input asp-for=Id type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Start Date</label>
                        <input asp-for=DateStart type="Date" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">End Date</label>
                        <input asp-for=DateEnd type="Date" class="form-control" />
                    </div>
                    <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form> 

            </div>
            <div class="card-footer">
            </div>
              
        </div>      
    </div>
 </div>
</body>
</html>
